<h1>Listing pumpkins</h1>

<table>
  <thead>
    <tr>
      <th><%= sortFunction "name", "Type" %></th>
      <th><%= sortFunction "color", "Color" %></th>
      <th><%= sortFunction "size", "Size" %></th>
      <th><%= sortFunction "price", "Price" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pumpkins.each do |pumpkin| %>
      <tr>
        <td><%= pumpkin.name %></td>
        <td><%= pumpkin.color %></td>
        <td><%= pumpkin.size %></td>
        <td><%= pumpkin.price %></td>
        <td><%= link_to 'Show', pumpkin %></td>
        <td><%= link_to 'Edit', edit_pumpkin_path(pumpkin) %></td>
        <td><%= link_to 'Destroy', pumpkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

